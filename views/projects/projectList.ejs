<%- include('../layouts/header.ejs')%>
<section class="project-container">
  <div class="page-header">
    <div class="page-title">
      <h1>My Projects</h1>
      <a href="/projects/new"><span class="material-symbols-outlined">
          add_box
        </span></a>
    </div>
    <div class="page-filter">
      <label for="sort">Sort By</label>
      <select name="sort" id="projectFilter">
        <option value="">...</option>
        <option value="recent" selected>Recent Project</option>
        <option value="finished">Finished Project</option>
        <option value="ongoing">Ongoing Project</option>
        <option value="stalled">Stalled Project</option>
      </select>
    </div>
  </div>
  <!-- Project List -->
  <div class="project-list">
    <%projects.forEach(project => {%>
    <div class="project">
      <div class="color" style="<%= project.color ? 'background-color: ' + project.color : '' %>"></div>
      <h2><%= project.name %></h2>
      <p><%= project.description %></p>
      <p>Total tasks: <%= project.tasks.length%></p>

      <div class="card-action">
        <input type="checkbox" name="check">
        <form action="/projects/<%= project.id %>?_method=DELETE" method="POST">
          <button type="submit">
            <span class="material-symbols-outlined">delete</span>
          </button>
        </form>

        <a href="/projects/<%= project.id %>/edit"><span class="material-symbols-outlined">edit</span></a>
      </div>

    </div>
    <%})%>
  </div>
  <!-- Project End -->
</section>

<%- include('../layouts/footer.ejs')%>