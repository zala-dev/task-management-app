<%- include('./header.ejs')%>
<div class="dashboard-header">
  <div class="dashboard-title">
    <h1>My Projects</h1>
  </div>
</div>
<!-- Dashbaord Project-->
<div class="content-wrapper">
  <div class="dashboard-projects">
    <% if (projects.length === 0) { %>
    <p>Please add a project.</p>
    <% } else { %>
    <% projects.forEach(project => { %>
    <div class="card" style="border-right: 2rem solid <%= project.color ? project.color : '#1b06bc'; %>;">
      <h2><%= project.name %></h2>
      <p><%= project.description %></p>
    </div>
    <% }); %>
    <% } %>
  </div>
  <!-- Dashbaord Project End-->

  <!-- Task Due Today List-->
  <aside class="dashboard-tasks">
    <h1>Today's Tasks</h1>
    <% todaysTasks.forEach(task => {%>
    <div class="dashboard-tasks-list">
      <p>
        <%=task.title%>
      </p>
    </div>
    <%})%>
  </aside>
  <!-- Task Due Today List End-->
</div>

<%- include('./footer.ejs')%>