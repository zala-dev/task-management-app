      <div class="user-container">
        <% if(user) {%>
        <img src="<%= user.avatar %>" alt="user-img">
        <p><%= user.name.split(" ")[0] %></p>
        <a href="/logout">LOG OUT</a>
        <%}%>
      </div>
    </nav>